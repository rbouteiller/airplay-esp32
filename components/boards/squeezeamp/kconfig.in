# SqueezeAMP board-specific configuration
# Only shown when BOARD_SQUEEZEAMP or BOARD_SQUEEZEAMP_4M is selected

if BOARD_SQUEEZEAMP_COMMON

menu "Pin Configuration"

    config BAT_CHANNEL
        int "Battery Monitor GPIO"
        default 7
        help
            GPIO for battery voltage monitoring ADC channel.

    menu "LED GPIOs"
        config LED_STATUS_GPIO
            int "Status LED GPIO"
            default 12
            help
                GPIO for status LED (single color). Set to -1 to disable.

        config LED_ERROR_GPIO
            int "Error LED GPIO"
            default 13
            help
                GPIO for error LED. Set to -1 to disable.

        config LED_RGB_GPIO
            int "RGB LED GPIO (WS2812)"
            default -1
            help
                GPIO for addressable RGB LED (WS2812). Set to -1 to disable.
    endmenu

    menu "I2S Pins"
        config I2S_BCK_IO
            int "I2S Bit Clock GPIO"
            default 33
            help
                I2S Bit Clock GPIO pin to use.

        config I2S_WS_IO
            int "I2S Word Select GPIO"
            default 25
            help
                I2S Word Select GPIO pin to use.

        config I2S_DO_IO
            int "I2S Data Output GPIO"
            default 32
            help
                I2S Data Output GPIO pin to use.

        config I2S_GND_IO
            int "I2S GND GPIO"
            default -1
            help
                GPIO to provide GND to I2S DAC if powered from GPIO. Set to -1 to disable.

        config I2S_VCC_IO
            int "I2S VCC GPIO"
            default -1
            help
                GPIO to provide VCC to I2S DAC if powered from GPIO. Set to -1 to disable.
    endmenu

    menu "DAC I2C Pins"
        config DAC_I2C_SDA
            int "I2C SDA GPIO for DAC"
            default 27
            help
                I2C data GPIO pin for TAS57xx DAC control.

        config DAC_I2C_SCL
            int "I2C SCL GPIO for DAC"
            default 26
            help
                I2C clock GPIO pin for TAS57xx DAC control.
    endmenu

    menu "Control GPIOs"
        config JACK_GPIO
            int "Headphone Jack Detection GPIO"
            default 34
            help
                GPIO for headphone jack detection.

        config SPKFAULT_GPIO
            int "DAC/AMP Fault Detection GPIO"
            default 2
            help
                GPIO for speaker/amplifier fault detection.

        config MUTE_GPIO
            int "Mute GPIO"
            default 14
            help
                GPIO used to mute DAC/amplifier.

        config MUTE_GPIO_LEVEL
            int "Mute GPIO Active Level"
            default 0
            help
                Active level for mute GPIO (0=active low, 1=active high).
    endmenu

    menu "SPDIF Pins"
        config SPDIF_DO_IO
            int "SPDIF Data Output GPIO"
            default 15
            help
                GPIO for SPDIF data output.
    endmenu

endmenu

endif # BOARD_SQUEEZEAMP_COMMON
